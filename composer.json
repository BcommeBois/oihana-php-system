{
    "name" : "oihana/php-system" ,
    "type" : "library" ,
    "description" : "The Oihana PHP System library" ,
    "keywords" : [ "php" , "date" , "logging" , "reflections" , "helpers" ] ,
    "homepage" : "https://github.com/BcommeBois/oihana-php-files" ,
    "license" : "MPL-2.0" ,
    "authors" : [
        {
            "name" : "Marc Alcaraz" ,
            "email" : "marc@ooop.fr" ,
            "homepage" : "https://www.ooop.fr" ,
            "role" : "Project Founder, Lead Developer."
        }
    ],
    "support": {
        "email": "marc@ooop.fr"
    },
    "scripts": {
        "doc": "rm -rf docs && mkdir docs && cp -r assets docs/assets && ./vendor/bin/phpdoc -c phpdoc.xml -v" ,
        "test": "./vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4" :
        {
            "oihana\\" : "src/oihana"
        },
        "files":
        [
            "src/oihana/init/initConfig.php",
            "src/oihana/init/initContainer.php",
            "src/oihana/init/initDefaultTimezone.php",
            "src/oihana/init/initDefinitions.php",
            "src/oihana/init/initErrors.php",
            "src/oihana/init/initMemoryLimit.php",
            "src/oihana/init/setIniIfExists.php",
            "src/oihana/models/helpers/documentUrl.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\" : "tests"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-imagick" : "*" ,
        "ext-pdo": "*",
        "ext-zip" : "*",
        
        "oihana/php-core": "dev-main",
        "oihana/php-exceptions": "dev-main",
        "oihana/php-reflect": "dev-main",
        "oihana/php-enums": "dev-main",
        "oihana/php-files": "dev-main",
        "oihana/php-schema": "^1.0",
        "monolog/monolog": "^3.9",
        "php-di/php-di": "^7.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0",
        "slim/slim": "^4.14",
        "somnambulist/validation": "^1.12",
        "slim/psr7": "^1.7",
        "slim/twig-view": "^3.4",
        "slim/http-cache": "^1.2",
        "slim/csrf": "^1.5",
        "twig/extra-bundle": "^3.21",
        "twig/intl-extra": "^3.21"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "nunomaduro/collision": "^8.8",
        "mikey179/vfsstream": "^1.6",
        "phpdocumentor/shim": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "phpdocumentor/shim": true
        }
    }
}
