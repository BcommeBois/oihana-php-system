<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="data/xsd/phpdoc.xsd"
>

    <title>Oihana Php System</title>

    <paths>
        <output>docs</output>
    </paths>

    <version number="1.0.0">

        <folder>latest</folder>

        <api ignore-packages="true">

            <source dsn=".">
                <path>src</path>
            </source>

            <output>api</output>

            <ignore hidden="true" symlinks="true">
                <path>tests/**/*</path>
                <path>build/**/*</path>
                <path>var/**/*</path>
                <path>vendor/**/*</path>
            </ignore>

            <extensions>
                <extension>php</extension>
            </extensions>

            <ignore-tags>
                <ignore-tag>template</ignore-tag>
                <ignore-tag>template-extends</ignore-tag>
                <ignore-tag>template-implements</ignore-tag>
                <ignore-tag>extends</ignore-tag>
                <ignore-tag>implements</ignore-tag>
            </ignore-tags>

            <default-package-name>Oihana Php System</default-package-name>

        </api>

    </version>

    <setting name="guides.enabled" value="false"/>
    <setting name="graphs.enabled" value="false"/>

</phpdocumentor>